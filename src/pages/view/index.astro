---
import Layout from "@/layouts/layout.astro";
import Search from "@/components/search.astro";
---

<Layout
    title="ハム大クロバス"
    description="授業を受講した皆の感想や愚痴が詰まったまとめサイトです。"
>
    <section class="mb-10">
        <div class="flex items-center justify-center mb-6">
            <div
                class="w-16 h-px bg-gradient-to-r from-transparent to-blue-400"
            >
            </div>
            <h2
                class="px-4 text-2xl font-bold text-gray-800 dark:text-gray-200"
            >
                感想を探す
            </h2>
            <div
                class="w-16 h-px bg-gradient-to-l from-transparent to-blue-400"
            >
            </div>
        </div>
        <div
            class="bg-white/95 dark:bg-gray-800/95 backdrop-blur-sm rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700"
        >
            <Search target="search" />
        </div>
    </section>
</Layout>
