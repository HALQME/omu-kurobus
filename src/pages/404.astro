---
import { Image } from "astro:assets";
import Layout from "../layouts/layout.astro";
export const prerender = true;
const image404 =
    "https://raw.githubusercontent.com/SAWARATSUKI/KawaiiLogos/refs/heads/main/ResponseCode/404%20NotFound.png";
---

<Layout
    title="404 Not Found"
    description="お探しのページが見つかりませんでした。"
>
    <Image
        src={image404}
        alt="404 Not Found"
        class="w-full select-none"
        loading="eager"
        sizes="(max-width: 600px) 100vw, 600px"
        width={600}
        height={400}
    />

    <p class="text-center text-gray-600 dark:text-gray-400 mt-4">
        Logo by
        <span class="text-blue-600 dark:text-blue-400 underline">
            <a href="https://github.com/SAWARATSUKI">SAWARATSUKI</a>
            /
            <a href="https://github.com/SAWARATSUKI/KawaiiLogos">KawaiiLogos</a>
        </span>
    </p>
</Layout>
