---
import { styles } from "@/styles/style";

// 現在のパスを取得
const currentPath = Astro.url.pathname;
---

<header
    class="bg-gradient-to-r from-blue-600 to-purple-600 dark:from-gray-800 dark:to-gray-900 text-white py-4 shadow-lg transition-colors duration-300"
>
    <div
        class="max-w-4xl mx-auto px-4 flex flex-col sm:flex-row sm:items-center sm:justify-between"
    >
        <div
            class="mb-3 sm:mb-0 transform hover:scale-105 transition-transform duration-200"
        >
            <h1
                class="text-2xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-100 dark:from-gray-100 dark:to-white"
            >
                ハム大クロバス
            </h1>
        </div>
        <nav class="flex gap-6 text-gray-100">
            <a href="/" class="relative group text-sm sm:text-base font-medium">
                <span
                    class="relative z-10 hover:text-white transition-colors duration-200"
                    >投稿</span
                >
                <span
                    class={`absolute bottom-0 left-0 w-full h-0.5 bg-white transform ${currentPath === "/" ? "scale-x-100" : "scale-x-0 group-hover:scale-x-100"} transition-transform duration-200`}
                ></span>
            </a>
            <a
                href="/view"
                class="relative group text-sm sm:text-base font-medium"
            >
                <span
                    class="relative z-10 hover:text-white transition-colors duration-200"
                    >閲覧</span
                >
                <span
                    class={`absolute bottom-0 left-0 w-full h-0.5 bg-white transform ${currentPath === "/view" ? "scale-x-100" : "scale-x-0 group-hover:scale-x-100"} transition-transform duration-200`}
                ></span>
            </a>
        </nav>
    </div>
</header>
